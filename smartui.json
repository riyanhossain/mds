{
  "web": {
    "browsers": [
      "chrome",
      "firefox",
      "safari",
      "edge"
    ],
    "viewports": [
      [1920, 1080],
      [1366, 768],
      [375, 667],
      [414, 896]
    ],
    "waitForPageRender": 10000,
    "waitForTimeout": 30000
  },
  "mobile": {
    "devices": [
      "iPhone 14",
      "Galaxy S23"
    ],
    "fullPage": true,
    "orientation": "portrait"
  },
  "threshold": {
    "errorThreshold": 0.1,
    "ignoreAntialiasing": true,
    "ignoreColors": false
  },
  "build": {
    "buildName": "Visual Regression Test",
    "project": "mds-visual-testing"
  }
}